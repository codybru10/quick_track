<%= render 'layouts/errors', :object => @client %>

<%= form_for [@employee,@client] do |f| %>
  <div class="card">
  <div class="input-field">
    <%= f.text_field :name, type: 'text', class: 'validate' %>
    <%= f.label :name %>
  </div>

  <div class="input-field">
    <%= f.text_field :address, type: 'text', class: 'validate' %>
    <%= f.label :address %>
  </div>

  <div class="input-field">
    <%= f.text_field :contact_name, type: 'text', class: 'validate' %>
    <%= f.label :contact_name %>
  </div>

  <div class="input-field">
    <%= f.text_field :contact_email, type: 'text', class: 'validate' %>
    <%= f.label :contact_email%>
  </div>

 <div class="input-field">
  <%= f.text_field :contact_number, type: 'text', class: 'validate' %>
  <%= f.label :contact_number%>
 </div>

 <div class="input-field">
   <%= f.text_field :rate, type: 'text', class: 'validate' %>
   <%= f.label :rate%>
 </div>
   <br>
   <br>
   <%= f.submit class: "btn link-btn black" %>
  </div>
 <% end %>
