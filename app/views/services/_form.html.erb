<%= render 'layouts/errors', :object => @service %>

<%= form_for [@client,@service] do |f| %>
  <div class="card">
   <%= f.hidden_field :client_id, :value => @client.id %>
   <%= f.hidden_field :employee_id, :value => current_employee.id %>

   <%= f.label :description %>
   <%= f.text_field :description %>

   <%= f.label :date %>
   <%= f.date_field :date %>

   <%= f.label "Time (in minutes)" %>
   <%= f.number_field :time %>


   <%= f.submit class: "btn link-btn black" %>
  </div>
 <% end %>

<div class="card">
  <h2><time>00:00:00</time></h2>
  <button class="btn black" id="start">start</button>
  <button class="btn black" id="stop">stop</button>
  <button class="btn black" id="clear">clear</button>
</div>
